        <uses-permission android:name="com.samsung.permission.SENSOR" />
        <uses-permission android:name="android.permission.BODY_SENSORS" />

        <activity android:name=".action.MainActivity" />
        <activity
            android:name="com.PM.Demo.UnityPlayerActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".action.FavoriteActivity"
            android:theme="@style/CustomTitle" />
